<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background01">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/login_w"
                android:layout_width="322dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="70dp"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/myuser"
                    android:layout_width="56dp"
                    android:layout_height="52dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="105dp"
                    android:layout_marginBottom="30dp"
                    android:src="@drawable/myuser" />

                <LinearLayout
                    android:id="@+id/login_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/myuser"
                    android:layout_marginBottom="30dp"
                    android:background="@color/mainviewBackground"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/user"
                        android:layout_width="40dp"
                        android:layout_height="42dp"
                        android:src="@drawable/user" />

                    <EditText
                        android:id="@+id/ec_edit_username"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:hint="输入账号" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/login_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/login_user"
                    android:layout_marginBottom="30dp"
                    android:background="@color/mainviewBackground"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/password"
                        android:layout_width="40dp"
                        android:layout_height="42dp"
                        android:src="@drawable/password" />

                    <EditText
                        android:id="@+id/ec_edit_password"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:ems="10"
                        android:hint="密码"
                        android:inputType="textPassword" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_w"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="110dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/ec_btn_sign_in"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:background="@color/light_blue"
                    android:text="登录" />

                <Button
                    android:id="@+id/ec_btn_sign_up"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:background="@android:color/transparent"
                    android:text="新用户注册" />
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>